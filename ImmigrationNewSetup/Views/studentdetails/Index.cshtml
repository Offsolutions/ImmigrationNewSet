@model IEnumerable<ImmigrationNewSetup.Models.studentdetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover" id="table1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.fathername)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.filetype)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.intake)
            </th>
           


            <th>
                @Html.DisplayNameFor(model => model.TrackingID)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
</thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.fathername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.filetype)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.intake) / @Html.DisplayFor(modelItem => item.year)
                </td>
                

                <td>
                    @Html.DisplayFor(modelItem => item.TrackingID)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }, new { @class = "label label-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StudentId }, new { @class = "label label-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StudentId }, new { @class = "label label-danger" }) |
                    @Html.ActionLink("Docs", "Create","Studentdocs", new { studentid = item.StudentId }, new { @class = "label label-success" })
                    @Html.ActionLink("Logs", "Index", "Logs", new { id = item.StudentId }, new { @class = "label label-primary" })
                </td>
            </tr>
        }

</table>
