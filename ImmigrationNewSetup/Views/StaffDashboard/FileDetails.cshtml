@model IEnumerable<ImmigrationNewSetup.Models.studentdetail>
@using ImmigrationNewSetup.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Staff.cshtml";
    var active = "Active";
    var Deactive = "Deactive";
    dbcontext db = new dbcontext();
}

<h2><b>Index</b></h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="table1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StudentId)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fathername)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.country)
                </th>
                
                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fathername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.country)
                </td>
               
                <td>
                    
                    @Html.ActionLink("Details", "FullDetails", new { id = item.StudentId }, new { @class = "label label-primary" }) |
                   
                    @Html.ActionLink("Logs","Logs", new { id = item.StudentId }, new { @class = "label label-primary" })
                </td>
            </tr>
                        }

    </table>
</div>


