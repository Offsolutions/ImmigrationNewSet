@model IEnumerable<ImmigrationNewSetup.Models.Country>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><b>Index</b></h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="table1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Action</th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CountryId }, new { @class = "label label-warning" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CountryId }, new { @class = "label label-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CountryId }, new { @class = "label label-danger" })
                    </td>
                </tr>
            }

    </table>
    </div>